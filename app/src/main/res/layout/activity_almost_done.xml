<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    tools:context=".activity.AlmostDoneActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/img_indicator"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:src="@drawable/line2"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back"
        />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/semibold"
        android:text="Welcome"
        app:layout_constraintTop_toBottomOf="@+id/img_indicator"
        />

    <TextView
        android:id="@+id/tvSubHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/satoshi_regular"
        android:text="Please complete your profile."
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_rect"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubHeading"
        app:layout_constraintBottom_toBottomOf="@+id/edt_email"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/satoshi_medium"
        android:textSize="14sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/darkwhite"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:paddingHorizontal="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        android:backgroundTint="@color/darkgray"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/tv_email"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_rect"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="@id/edtPassword"/>
    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/satoshi_medium"
        android:textSize="16sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/darkwhite"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3"/>
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:backgroundTint="@color/darkgray"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/medium"
        android:singleLine="true"
        android:maxLength="15"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"/>

    <ImageView
        android:id="@+id/toggle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_eye_hide"
        app:tint="@color/primary"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="@id/view3"/>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_rect"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="@id/edtPassword2"/>
    <TextView
        android:id="@+id/tvPassword4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Retype password"
        android:fontFamily="@font/satoshi_medium"
        android:textSize="16sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/darkwhite"
        app:layout_constraintStart_toStartOf="@id/view4"
        app:layout_constraintEnd_toEndOf="@id/view4"
        app:layout_constraintTop_toTopOf="@id/view4"/>
    <EditText
        android:id="@+id/edtPassword2"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:backgroundTint="@color/darkgray"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/medium"
        android:singleLine="true"
        android:maxLength="15"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view4"
        app:layout_constraintEnd_toEndOf="@id/view4"
        app:layout_constraintTop_toBottomOf="@id/tvPassword4"/>

    <ImageView
        android:id="@+id/toggle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_eye_hide"
        app:tint="@color/primary"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@id/view4"
        app:layout_constraintTop_toTopOf="@id/view4"
        app:layout_constraintBottom_toBottomOf="@id/view4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="32dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/semibold"
        android:backgroundTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <FrameLayout
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_button"
            android:id="@+id/btnn"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>