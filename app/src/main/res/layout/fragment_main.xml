<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MainFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        >

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="32dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/invite_friend_banner"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_top_handson_receipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Handson Receipe"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/semibold"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_show_all_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_Handson_receipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/top_handson_receipe_row"
            android:scrollbarThumbHorizontal="@color/secondary"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_top_handson_receipe"
            />

        <TextView
            android:id="@+id/tv_interview_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Interview Question"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/semibold"
            app:layout_constraintTop_toBottomOf="@+id/rv_Handson_receipe"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_show_all_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@+id/rv_Handson_receipe"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_interview_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/top_interview_que_row"
            android:scrollbarThumbHorizontal="@color/secondary"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_interview_question"
            />

        <TextView
            android:id="@+id/tv_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Quiz"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/semibold"
            app:layout_constraintTop_toBottomOf="@+id/rv_interview_question"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_show_all_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@+id/rv_interview_question"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/top_quiz_row"
            android:scrollbarThumbHorizontal="@color/secondary"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_quiz"
            />

        <TextView
            android:id="@+id/tv_pro_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Pro Tips"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/semibold"
            app:layout_constraintTop_toBottomOf="@+id/rv_quiz"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_show_all_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@+id/rv_quiz"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pro_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/top_protips_row"
            android:scrollbarThumbHorizontal="@color/secondary"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_pro_tips"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>