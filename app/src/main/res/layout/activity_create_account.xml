<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    tools:context=".activity.CreateAccountActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_indicator"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:src="@drawable/line"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/semibold"
        android:text="Create an account"
        app:layout_constraintTop_toBottomOf="@+id/img_indicator"
        />

    <TextView
        android:id="@+id/tvSubHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/satoshi_regular"
        android:text="Please complete your profile."
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_rect"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubHeading"
        app:layout_constraintBottom_toBottomOf="@id/edtEmail"/>

    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:fontFamily="@font/satoshi_medium"
        android:textSize="14sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/darkwhite"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintEnd_toEndOf="@id/view1"
        app:layout_constraintTop_toTopOf="@id/view1"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingHorizontal="20dp"
        android:hint="Full name"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        android:backgroundTint="@color/darkgray"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintEnd_toEndOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/tv_full_name"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_rect"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@+id/edt_Dob"
        />

    <TextView
        android:id="@+id/tv_dob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:fontFamily="@font/satoshi_medium"
        android:textSize="14sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/darkwhite"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2"/>

    <EditText
        android:id="@+id/edt_Dob"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingHorizontal="20dp"
        android:hint="Date of birth"
        android:clickable="false"
        android:focusable="false"
        android:cursorVisible="false"
        android:fontFamily="@font/medium"
        android:drawablePadding="10dp"
        android:textSize="16sp"
        android:drawableRight="@drawable/cal"
        android:backgroundTint="@color/darkgray"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/tv_dob"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_rect"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="@+id/edt_phone_no"
        />

    <TextView
        android:id="@+id/tv_phone_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:fontFamily="@font/satoshi_medium"
        android:textSize="14sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/darkwhite"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3"/>

    <EditText
        android:id="@+id/edt_country_code"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:inputType="number"
        android:clickable="false"
        android:focusable="false"
        android:gravity="end"
        android:text="+91"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        android:backgroundTint="@color/darkgray"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_no"/>

    <EditText
        android:id="@+id/edt_phone_no"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingHorizontal="5dp"
        android:hint="Phone number"
        android:inputType="number"
        android:gravity="start"
        android:maxLength="10"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        android:backgroundTint="@color/darkgray"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/edt_country_code"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_no"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="32dp"
        android:text="Sign in"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/semibold"
        android:backgroundTint="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:cornerRadius="32dp"
        android:text="Continue"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/semibold"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />

